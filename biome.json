{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "root": true,
  "files": {
    "includes": [
      "**",
      "!!**/biome"
    ],
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "useEditorconfig": true
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": {
        "noDoubleEquals": "error"
      }
    }
  },
  "javascript": {
    "parser": {
      "jsxEverywhere": false
    },
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "expand": "auto",
      "operatorLinebreak": "before"
    },
    "linter": {
      "enabled": true
    },
    "jsxRuntime": "transparent"
  },
  "json": {
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "expand": "always"
    },
    "linter": {
      "enabled": true
    }
  }
}
