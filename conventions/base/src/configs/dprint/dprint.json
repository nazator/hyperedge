{
  "lineWidth": 100,
  "indentWidth": 2,
  "useTabs": false,
  "newLineKind": "lf",
  "incremental": true,

  "excludes": [
    "*.temp",
    "*.tmp",
    "*.js",
    "*.cjs",
    "*.mjs",
    "*.ts",
    "*.cts",
    "*.mts",
    "*.jsx",
    "*.tsx",
    "*.json",
    "*.jsonc"
  ],

  "markdown": {
    "lineWidth": 100,
    "newLineKind": "lf",
    "textWrap": "maintain",
    "emphasisKind": "underscores",
    "strongKind": "asterisks"
  },
  "toml": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "newLineKind": "lf",
    "comment.forceLeadingSpace": true,
    "cargo.applyConventions": true
  },
  "yaml": {
    "printWidth": 100,
    "indentWidth": 2,
    "lineBreak": "lf",
    "quotes": "preferDouble",
    "trailingComma": true,
    "formatComments": true,
    "indentBlockSequenceInMap": true,
    "braceSpacing": true,
    "bracketSpacing": false,
    "dashSpacing": "indent",
    "preferSingleLine": false,
    "trimTrailingWhitespaces": true,
    "trimTrailingZero": false
  },
  "plugins": [
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/markdown-0.20.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
  ]
}
