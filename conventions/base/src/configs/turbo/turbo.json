{
  "$schema": "https://turborepo.com/schema.json",

  "globalDependencies": [
    "turbo.json",
    "package.json",
    "bun.lockb",
    "pnpm-lock.yaml",
    "yarn.lock",
    "Cargo.lock",
    "go.sum",
    "poetry.lock",
    "requirements.lock",
    "gradle.lockfile"
  ],

  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "lib/**",
        "include/**",
        "build.zig",
        "Cargo.toml",
        "Cargo.lock",
        "go.mod",
        "go.sum",
        "*.csproj",
        "*.fsproj",
        "*.vbproj",
        "build.gradle",
        "build.gradle.kts",
        "settings.gradle",
        "pyproject.toml",
        "requirements*.txt",
        "tsconfig*.json"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "out/**",
        "target/**",
        "bin/**"
      ]
    },

    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "src/**",
        "lib/**",
        "*.config.*",
        ".eslintrc*",
        "biome.json",
        "ruff.toml",
        ".golangci.yml"
      ],
      "outputs": []
    },

    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**"
      ],
      "outputs": [
        "coverage/**",
        "reports/**"
      ]
    },

    "check": {
      "dependsOn": [
        "^check"
      ],
      "inputs": [
        "src/**",
        "lib/**"
      ],
      "outputs": []
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "clean": {
      "cache": false
    }
  }
}
