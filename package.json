{
  "name": "root",
  "version": "0.0.0",
  "description": "HyperEdge Convention: Defining the peak of security, precision, and modern versatility.",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/nazator/conventions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazator/conventions.git"
  },
  "author": "KazViz <kaz@kazviz.com> (https://kazviz.com)",
  "bugs": {
    "url": "https://github.com/nazator/conventions/issues"
  },

  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "check": "biome check && dprint --c \"**/*.{md,yml,yaml}\"",
    "format": "biome check --write && dprint fmt",
    "ci": "bun run clean && bun run build && bun run check",
    "postinstall": "lefthook install"
  },

  "packageManager": "bun@1.3.1",
  "workspaces": [
    "conventions/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "dprint": "^0.51.1",
    "lefthook": "^2.0.2",
    "packlet": "^0.3.3",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
